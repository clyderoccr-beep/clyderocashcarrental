rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Publicly readable profile photos and covers
    match /profile_photos/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /profile_covers/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Fallback: keep existing owner-only write behavior for other paths
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'clyderofraser97@gmail.com';
    }
  }
}
